<table>
  <tr>
    <td>Screen Name</td>
    <td><%= @user.name %>
  </tr>
  <tr>
    <td>Forename</td>
    <td><%= @user.forename %>
  </tr>
  <tr>
    <td>Surname</td>
    <td><%= @user.surname %>
  </tr>
  <tr>
    <td>Email</td>
    <td><%= @user.email %>
  </tr>
  <tr>
    <td>Auth Code</td>
    <td><%= @user.authentication_code %>
  </tr>
  <tr>
    <td>Bookmarklet</td>
    <td><a href="<%= render :partial => 'bookmarklet', :locals => {:user => user} %>">Spenglerise</a> (drag to your toolbar)</td>
  </tr>
  <tr>
    <td>RSS Feed</td>
    <td><%= link_to "Feed", :action => 'feed' %></td>
  </tr>
</table>
